<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/usinasoft-bootstrap.css" />
    <style>
      .op-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
      }

      .op-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
      }

      .op-info-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 8px;
      }

      .op-info-label {
        font-size: 0.875rem;
        opacity: 0.9;
        margin-bottom: 0.25rem;
      }

      .op-info-value {
        font-size: 1.25rem;
        font-weight: 600;
      }

      .pecas-table {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }

      .pecas-table thead {
        background: #f8f9fa;
      }

      .status-select {
        min-width: 150px;
      }

      .priority-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
      }

      .priority-baixa {
        background-color: #e3f2fd;
        color: #1976d2;
      }

      .priority-media {
        background-color: #fff3e0;
        color: #ef6c00;
      }

      .priority-alta {
        background-color: #ffebee;
        color: #c62828;
      }

      .btn-back {
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>

    <main class="main-content">
      <div class="container-fluid">
        <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <i class="fas fa-exclamation-triangle me-2"></i>
          <%= error %>
        </div>
        <% } else if (op) { %>

        <!-- Botão Voltar -->
        <a href="/producao" class="btn btn-outline-secondary btn-back">
          <i class="fas fa-arrow-left me-2"></i>Voltar para Produção
        </a>

        <!-- Cabeçalho da OP -->
        <div class="op-header">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h2 class="mb-1">
                <i class="fas fa-file-alt me-2"></i>OP #<%= op.codigo %>
              </h2>
              <p class="mb-0 opacity-75">
                Cliente: <%= op.cliente_nome || 'N/A' %>
              </p>
            </div>
            <span class="badge <%= getStatusClass(op.status) %> fs-5">
              <%= getStatusLabel(op.status) %>
            </span>
          </div>

          <div class="op-info-grid">
            <div class="op-info-item">
              <div class="op-info-label">
                <i class="fas fa-calendar me-1"></i>Data de Entrega
              </div>
              <div class="op-info-value">
                <%= op.data_entrega ? formatDate(op.data_entrega) : 'Não definida' %>
              </div>
            </div>

            <div class="op-info-item">
              <div class="op-info-label">
                <i class="fas fa-user me-1"></i>Responsável
              </div>
              <div class="op-info-value">
                <%= op.responsavel_nome || 'Não atribuído' %>
              </div>
            </div>

            <div class="op-info-item">
              <div class="op-info-label">
                <i class="fas fa-wrench me-1"></i>Total de Peças
              </div>
              <div class="op-info-value"><%= pecas.length %></div>
            </div>

            <div class="op-info-item">
              <div class="op-info-label">
                <i class="fas fa-clock me-1"></i>Criado em
              </div>
              <div class="op-info-value">
                <%= formatDate(op.created_at) %>
              </div>
            </div>
          </div>

          <% if (op.observacoes) { %>
          <div class="mt-3">
            <div class="op-info-label">
              <i class="fas fa-comment me-1"></i>Observações
            </div>
            <p class="mb-0 mt-2"><%= op.observacoes %></p>
          </div>
          <% } %>
        </div>

        <!-- Lista de Peças -->
        <div class="card">
          <div class="card-header bg-white">
            <h4 class="mb-0">
              <i class="fas fa-cogs me-2"></i>Peças da Ordem de Produção
            </h4>
          </div>
          <div class="card-body p-0">
            <% if (pecas && pecas.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Quantidade</th>
                    <th>Prioridade</th>
                    <th>Status</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% pecas.forEach(peca => { %>
                  <tr data-peca-id="<%= peca.id %>">
                    <td><strong><%= peca.codigo %></strong></td>
                    <td><%= peca.nome %></td>
                    <td><%= peca.descricao || '-' %></td>
                    <td><%= peca.quantidade %></td>
                    <td>
                      <span class="priority-badge priority-<%= getPrioridadeLabel(peca.prioridade).toLowerCase() %>">
                        <%= getPrioridadeLabel(peca.prioridade) %>
                      </span>
                    </td>
                    <td>
                      <select 
                        class="form-select form-select-sm status-select"
                        data-peca-id="<%= peca.id %>"
                        data-status-original="<%= peca.status %>"
                        onchange="alterarStatusPeca(this, '<%= peca.id %>', '<%= peca.codigo %>')"
                      >
                        <option value="em_fila" <%= peca.status === 'em_fila' ? 'selected' : '' %>>
                          Em Fila
                        </option>
                        <option value="em_andamento" <%= peca.status === 'em_andamento' ? 'selected' : '' %>>
                          Em Andamento
                        </option>
                        <option value="pausada" <%= peca.status === 'pausada' ? 'selected' : '' %>>
                          Pausada
                        </option>
                        <option value="concluida" <%= peca.status === 'concluida' ? 'selected' : '' %>>
                          Concluída
                        </option>
                        <option value="cancelada" <%= peca.status === 'cancelada' ? 'selected' : '' %>>
                          Cancelada
                        </option>
                      </select>
                    </td>
                    <td>
                      <button
                        class="btn btn-sm btn-outline-info"
                        onclick="verDetalhesPeca('<%= peca.id %>')"
                        title="Ver detalhes"
                      >
                        <i class="fas fa-info-circle"></i>
                      </button>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <% } else { %>
            <div class="text-center py-5">
              <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
              <p class="text-muted">Nenhuma peça cadastrada nesta OP ainda.</p>
            </div>
            <% } %>
          </div>
        </div>

        <% } %>
      </div>
    </main>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>

    <script>
      async function alterarStatusPeca(selectElement, pecaId, codigoPeca) {
        const novoStatus = selectElement.value;
        const statusOriginal = selectElement.dataset.statusOriginal;

        // Confirmar alteração
        if (!confirm(`Alterar status da peça ${codigoPeca} para "${selectElement.options[selectElement.selectedIndex].text}"?`)) {
          // Reverter select para o status original
          selectElement.value = statusOriginal;
          return;
        }

        try {
          const response = await fetch(`/pecas/${pecaId}`, {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status: novoStatus }),
          });

          const result = await response.json();

          if (result.success) {
            // Atualizar o status original para o novo status
            selectElement.dataset.statusOriginal = novoStatus;
            
            // Mostrar notificação de sucesso
            UsinaSoft.utils.showNotification('Status da peça atualizado com sucesso!', 'success');
            
            // Adicionar feedback visual temporário
            const row = selectElement.closest('tr');
            row.classList.add('table-success');
            setTimeout(() => {
              row.classList.remove('table-success');
            }, 1500);
          } else {
            alert('Erro: ' + result.error);
            // Reverter select para o status original
            selectElement.value = statusOriginal;
          }
        } catch (error) {
          console.error('Erro:', error);
          alert('Erro ao atualizar status da peça');
          // Reverter select para o status original
          selectElement.value = statusOriginal;
        }
      }

      function verDetalhesPeca(pecaId) {
        // Implementar visualização de detalhes da peça
        alert(`Ver detalhes da peça ${pecaId}`);
      }
    </script>
  </body>
</html>
